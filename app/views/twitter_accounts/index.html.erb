<div class="d-flex align-items-center justify-content-between">
  <h1>Twitter Accounts</h1>

  <%= button_to "Connect a Twitter account", "/auth/twitter", method: :post, class: "btn btn-primary" %>
</div>

<% @twitter_accounts.each do |twitter_account|%>
  <div class="d-flex align-content-center mb-4">
    <div class="mb-4">
      <%= image_tag twitter_account.image, class: "rounded-circle" %>
      <%= link_to twitter_account.name, "https://twitter.com/#{twitter_account.name}", target: :_blank, class: "btn btn-outline-primary ms-3" %>
    </div>
    <%= button_to "Disconnect", twitter_account, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-secondary ms-3 mt-1" %>
  </div>
<% end %>